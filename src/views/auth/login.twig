{% extends 'base.twig' %}

{% block title %}
  Connexion
{% endblock %}

{% block content %}
  <div class="container d-flex justify-content-center text-center p-4">
    <form class="login-form">
        <div class='login-logo-wrap'>
            <h1 class="login-title">Connexion</h1>
            <img src="/assets/logo.png" alt="Logo" class="logoconnexion">
        </div>
        <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="username" placeholder="Nom d'utilisateur" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" placeholder="Mot de passe" required>
        </div>
  
      <div class="form-links">
        <a href="/mdp-oublie" class="forgot-link">Mot de passe oubli√©?</a>
      </div>
      <button type="submit" class="btn-login">Se connecter</button>
      <p class="signup-text">
        Pas de compte ?<a href="/register" class="signup-link">  Inscris-toi !</a>
      </p>
    </form>
  </div>
{% endblock %}
