{% extends 'base.twig' %}

{% block title %}
  Accueil
{% endblock %}

{% block content %}
  <h3>Objets en tendance</h3>

  <div class="d-flex justify-content-center gap-2">
    {% for item in items %}
      <div class="card" style="width: 18rem;">
        <img src="/assets/items/{{item.image}}" class="card-img-top img-fluid" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{ item.name }}</h5>
          <p class="card-text">{{item.description}}</p>
          <a href="/item?id={{ item.id }}" class="btn btn-primary">Plus d'informations</a>
        </div>
      </div>
    {% endfor %}
  </div>

  <a href="/items" class="btn">Voir les objets disponibles</a>
{% endblock %}
