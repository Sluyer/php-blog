{% extends 'base.twig' %}

{% block title %}
  Accueil
{% endblock %}

{% block content %}
  <div class="title text-center p-4">
    <h3 class="fs-1">Objets en tendance</h3>
  </div>

  <div class="title"></div>

  <div class="d-flex justify-content-center gap-2">
    {% for item in items %}
      <div class="card" style="width: 18rem;">
        <img src="/assets/items/{{ item.image }}" class="card-img-top img-fluid" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{ item.name }}</h5>
          <p class="card-text">{{ item.description }}</p>
          <a href="#" class="btn btn-primary">Plus d'informations</a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
